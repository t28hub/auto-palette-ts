{
  "name": "auto-palette",
  "description": "Extract color palette from your image automatically",
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t28hub/auto-palette.git"
  },
  "bugs": {
    "url": "https://github.com/t28hub/auto-palette/issues"
  },
  "homepage": "https://github.com/t28hub/auto-palette",
  "author": {
    "name": "Tatsuya Maki",
    "url": "https://github.com/t28hub"
  },
  "keywords": [
    "frontend",
    "color",
    "color-palette",
    "palette",
    "canvas",
    "image"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "test": "vitest run --coverage",
    "test:ui": "vitest run --coverage --ui",
    "format": "prettier --plugin-search-dir . --list-different --write .",
    "prebuild": "pnpm clean",
    "build": "tsc && vite build"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.34",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "@vitest/coverage-c8": "^0.28.4",
    "@vitest/ui": "^0.28.4",
    "@vitest/web-worker": "^0.28.4",
    "canvas": "^2.11.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.3",
    "jest-extended": "^3.2.3",
    "jest-matcher-utils": "^29.4.1",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vitest": "^0.28.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "*.{json,yml,md,html,css}": [
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@7.25.0"
}
