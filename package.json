{
  "name": "auto-palette",
  "description": "Extract prominent color palette from your image automatically",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t28hub/auto-palette.git"
  },
  "bugs": {
    "url": "https://github.com/t28hub/auto-palette/issues"
  },
  "homepage": "https://github.com/t28hub/auto-palette",
  "author": {
    "name": "Tatsuya Maki",
    "url": "https://github.com/t28hub"
  },
  "keywords": [
    "color",
    "palette",
    "canvas",
    "image",
    "imagedata",
    "jpg",
    "png"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prebuild": "pnpm clean",
    "build": "tsc && vite build",
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "pnpm lint:ts && pnpm lint:knip",
    "lint:ts": "eslint .",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "lint:knip": "pnpm lint:knip:development && pnpm lint:knip:production",
    "lint:knip:development": "knip",
    "lint:knip:production": "knip --production --strict",
    "test": "pnpm test:coverage",
    "test:coverage": "vitest run --coverage",
    "test:benchmark": "vitest bench --run",
    "test:ui": "vitest run --coverage --ui",
    "format": "prettier --list-different --write ."
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.44",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-v8": "^1.0.2",
    "@vitest/ui": "^1.0.2",
    "canvas": "^2.11.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest-extended": "^4.0.2",
    "jest-matcher-utils": "^29.7.0",
    "jsdom": "^23.0.1",
    "knip": "^3.6.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.6",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^1.0.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "*.{json,yml,md,html,css}": [
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@8.10.5"
}
