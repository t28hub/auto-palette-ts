{
  "name": "auto-palette",
  "description": "Extract color palette from your image automatically",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t28hub/auto-palette.git"
  },
  "bugs": {
    "url": "https://github.com/t28hub/auto-palette/issues"
  },
  "homepage": "https://github.com/t28hub/auto-palette",
  "author": {
    "name": "Tatsuya Maki",
    "url": "https://github.com/t28hub"
  },
  "keywords": [
    "frontend",
    "color",
    "color-palette",
    "palette",
    "canvas",
    "image"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint './src/**/*.{ts,tsx}' --fix",
    "knip": "knip --production --strict",
    "test": "vitest run --coverage",
    "test:ui": "vitest run --coverage --ui",
    "format": "prettier --list-different --write .",
    "prebuild": "pnpm clean",
    "build": "tsc && vite build"
  },
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.44",
    "@types/node": "^20.9.1",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "canvas": "^2.11.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest-extended": "^4.0.2",
    "jest-matcher-utils": "^29.7.0",
    "jsdom": "^23.0.1",
    "knip": "^3.2.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.3",
    "vitest": "^0.34.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm lint:fix",
      "pnpm format"
    ],
    "*.{json,yml,md,html,css}": [
      "pnpm format"
    ]
  },
  "packageManager": "pnpm@8.10.5"
}
