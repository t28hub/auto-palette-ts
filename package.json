{
  "name": "auto-palette",
  "description": "Extract color palette from image automatically",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "module": "dist/index.es.js",
  "browser": "dist/index.umd.js",
  "types": "dist/main.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/t28hub/auto-palette.git"
  },
  "bugs": {
    "url": "https://github.com/t28hub/auto-palette/issues"
  },
  "homepage": "https://github.com/t28hub/auto-palette",
  "author": {
    "name": "Tatsuya Maki",
    "url": "https://github.com/t28hub"
  },
  "workspaces": [
    "app"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest --config jest.config.ts --coverage",
    "format": "prettier --ignore-path .eslintignore --list-different --write .",
    "prebuild": "yarn clean",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@napi-rs/canvas": "^0.1.30",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-extended": "^3.2.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.3",
    "vite-plugin-dts": "^1.7.1"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:fix",
      "yarn format"
    ],
    "*.{json,yml,md,html,css}": [
      "yarn format"
    ]
  },
  "packageManager": "yarn@1.22.19"
}
