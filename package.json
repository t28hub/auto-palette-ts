{
  "name": "auto-palette",
  "description": "Extract prominent color palette from your image automatically",
  "version": "1.2.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t28hub/auto-palette-ts.git"
  },
  "bugs": {
    "url": "https://github.com/t28hub/auto-palette-ts/issues"
  },
  "homepage": "https://github.com/t28hub/auto-palette-ts",
  "author": {
    "name": "Tatsuya Maki",
    "url": "https://github.com/t28hub"
  },
  "keywords": [
    "color",
    "palette",
    "canvas",
    "image",
    "imagedata",
    "jpg",
    "png"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prebuild": "pnpm clean",
    "build": "tsc && vite build",
    "clean": "rimraf dist",
    "docs": "typedoc",
    "dev": "vitest dev",
    "format": "biome format --write .",
    "lint": "pnpm lint:biome && pnpm lint:knip",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome check --apply .",
    "lint:knip": "pnpm lint:knip:development && pnpm lint:knip:production",
    "lint:knip:development": "knip",
    "lint:knip:production": "knip --production --strict",
    "test": "pnpm test:coverage",
    "test:benchmark": "vitest bench --run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest run --coverage --ui",
    "release": "pnpx semantic-release",
    "release:check": "pnpx semantic-release --dry-run --no-ci"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.2",
    "@codspeed/vitest-plugin": "^2.3.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@napi-rs/canvas": "^0.1.44",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^20.10.5",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "canvas": "^2.11.2",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "husky": "^8.0.3",
    "jest-extended": "^4.0.2",
    "jest-matcher-utils": "^29.7.0",
    "jsdom": "^23.0.1",
    "knip": "^4.0.2",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.0",
    "typedoc": "^0.25.4",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-dts": "^3.7.0",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pnpm run lint:biome:fix",
      "pnpm run format"
    ],
    "*.{json,yml,md}": [
      "pnpm run format"
    ]
  },
  "packageManager": "pnpm@8.14.1"
}
